<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HistoryFragment"
    android:background="#56FFB8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="-55dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="@dimen/_20sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Συναλλαγές"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"


                android:layout_marginTop="@dimen/_36sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Σύνολο: "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_25sdp"

                />

            <!-- Card view for displaying the -->
            <!-- Pie chart and details of pie chart -->
            <androidx.cardview.widget.CardView

                android:id="@+id/cardViewGraph"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:elevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="0dp"
                android:outlineProvider="none"
                >


                <!-- and details of pie chart-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <!--Pie chart to display the data-->


                    <!-- TODO: The marginLeft and marginRight should align with the figma units -->
                    <org.eazegraph.lib.charts.PieChart
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/piechart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Use of programming languages -->


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/historyScrollView"

                >




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cardViewGraph"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:id="@+id/details"
                    android:outlineProvider="none">

                    <LinearLayout
                        android:id="@+id/linear_orders_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <!-- FIRST ORDER -->
                        <RelativeLayout
                            android:background="@drawable/previous_order_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            >

                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"

                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <!--Text view to display R -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-light"
                                        android:text="#1"
                                        android:textColor="@color/black"
                                        android:textSize="21sp"
                                        android:textStyle="bold" />


                                    <!-- used. For now default set to 0-->

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="9dp"
                                        android:background="@color/black"
                                        android:layout_alignParentRight="true"
                                        app:cardBackgroundColor="#56FFB8"
                                        android:elevation="10dp"
                                        app:cardCornerRadius="10dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginRight="10dp"
                                        />



                                </RelativeLayout>
                                <!--View to display the line-->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@color/color_line" />

                                <!-- THE CONTENT UNDER THE PURCHASE -->
                                <RelativeLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp">
                                    <!--Text view to display R -->
                                    <TextView
                                        android:id="@+id/txtDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-light"
                                        android:text="Ημερομηνία:"

                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:fontFamily="sans-serif-light"
                                        android:text="29/04/2023"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />


                                    <!-- used. For now default set to 0-->
                                    <TextView
                                        android:id="@+id/tvR2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:fontFamily="sans-serif-light"
                                        android:text="Υπηρεσία"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:layout_marginRight="@dimen/_10sdp"

                                        />


                                    <TextView
                                        android:id="@+id/tvR3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="Ταϊλανδέζικο Μασάζ"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textStyle="bold" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:id="@+id/txtPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginTop="30dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="30.00$"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/txtDoctor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="sans-serif-light"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:text="Ιατρός"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"

                                        />


                                    <TextView
                                        android:id="@+id/txtDoctorName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:fontFamily="sans-serif-light"
                                        android:text="Doctor Lee"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>