<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="#56FFB8">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="-55dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="591dp">


            <EditText
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_marginBottom="347dp"
                android:background="@drawable/borders"
                android:gravity="center_horizontal"
                android:textColor="#7B7B7B"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r2_save_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="227dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="34dp"
                android:text="Νέα Παροχή"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/r2_save_btn"
                android:layout_width="296dp"
                android:layout_height="61dp"
                android:backgroundTint="#56FFB8"
                android:text="Αποθήκευση"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerFamily="rounded"
                app:cornerRadius="@android:dimen/notification_large_icon_width"
                app:cornerSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.944" />

            <EditText
                android:id="@+id/r2_cost_tv"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_marginBottom="72dp"
                android:background="@drawable/borders"
                android:gravity="clip_horizontal"
                android:hint="Κόστος ανά Συνεδρία"
                android:paddingLeft="6dp"
                android:paddingTop="19dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#7B7B7B"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r2_save_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/r2_sname_tv"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/r2_sname_tv"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_marginBottom="256dp"
                android:background="@drawable/borders"
                android:gravity="clip_horizontal"
                android:hint="Όνομα Παροχής"
                android:paddingLeft="6dp"
                android:paddingTop="19dp"
                android:textColor="#7B7B7B"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r2_save_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/r2_code_tv"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:layout_marginBottom="347dp"
                android:autoText="false"
                android:background="@drawable/borders"
                android:gravity="clip_horizontal"
                android:hint="Κωδικός"
                android:paddingLeft="6dp"
                android:paddingTop="19dp"
                android:textColor="#7B7B7B"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r2_save_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/r2_desc_tv"
                android:layout_width="300dp"
                android:layout_height="118dp"
                android:background="@drawable/borders"
                android:gravity="top"
                android:hint="Περιγραφή"
                android:paddingLeft="6dp"
                android:textColor="#7B7B7B"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r2_save_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/r2_sname_tv"
                app:layout_constraintVertical_bias="0.12" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="395dp"
        android:layout_height="278dp"
        android:layout_marginTop="-52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ergasia" />

</androidx.constraintlayout.widget.ConstraintLayout>